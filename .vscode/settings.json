{
    "eslint.autoFixOnSave": true,
    "eslint.options": {
        "config": "./.eslintrc.json"
    },
    "eslint.validate": [
        { "language": "typescript", "autoFix": true },
        { "language": "typescriptreact", "autoFix": true } 
    ],
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "eslint.enable": true,
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename)"
        }
    }
}